{
  "schemaVersion": 1,
  "id": "notifications-addon",
  "version": "${version}",
  "name": "Notifications Addon",
  "description": "An addon for the meteor client that displays various notifications on the HUD.",
  "authors": [
    "SIMULATAN"
  ],
  "contact": {
    "repo": "https://github.com/SIMULATAN/meteor-notifications-addon"
  },
  "icon": "assets/notifications/icon.png",
  "environment": "client",
  "entrypoints": {
    "meteor": [
      "com.github.simulatan.meteornotificationsaddon.NotificationsAddon"
    ]
  },
  "mixins": [
    "notifications.mixins.json"
  ],
  "custom": {
    "meteor-client:color": "225,25,25"
  },
  "depends": {
    "java": ">=21",
    "minecraft": ">=@mc_version@",
    "meteor-client": "*"
  }
}
